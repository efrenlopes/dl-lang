programa area_circulo inicio
  inteiro raio;
  booleano positivo;
  raio = 5;
  positivo = (raio > 1 | raio == 1);
  se (positivo == verdade) inicio
    real area;
    area = 3.1415 * raio * raio;
    enquanto (area < 300) inicio
      escreva(area);
      raio = raio + 1;
      area = 3.1415 * raio * raio;
    fim;
    escreva(area);    
  fim;
fim.